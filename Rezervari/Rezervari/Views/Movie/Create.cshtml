@model MovieModel
@{
    ViewData["Title"] = "Create";
}

<h3>Adauga Film</h3>
<form method="post">
    <div class="form-group">
        <label>Nume Film</label>
        <input asp-for="Name" type="text" class="form-control mb-3" placeholder="Nume Film" />
        <label>Descriere</label>
        <input asp-for="Description" type="text" class="form-control mb-3" placeholder="Descriere" />
        <label>Dimensiune</label>
        <input asp-for="Length" type="text" class="form-control mb-3" placeholder="Dimensiune" />
        <label>An</label>
        <input asp-for="Year" type="text" class="form-control mb-3" placeholder="An" />
        <label>Rating</label>
        <input asp-for="Rating" type="text" class="form-control mb-3" placeholder="Rating" />
        <label>Regizor</label>
        <input asp-for="Director" type="text" class="form-control mb-3" placeholder="Regizor" />
    </div>
    <div class="form-group">
        <label asp-for="MovieTypeId" class="control-label"></label>
        <select asp-for="MovieTypeId" asp-items="@(new SelectList(ViewData["MovieTypes"] as List<MovieTypeModel>, "Id", "Name"))" class="form-control">
            <option value="">Selectați tipul de film</option>
        </select>
        <span asp-validation-for="MovieTypeId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success w-100">Adauga</button>
</form>
